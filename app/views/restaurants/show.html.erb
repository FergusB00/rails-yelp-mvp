<div class="container pt-4">
  <h3><strong><%= @restaurant.name %></strong></h3>
  <p><strong>Address:</strong> <%= @restaurant.address %></p>
  <p><strong>Cuisine:</strong> <%= @restaurant.category.capitalize %></p>
  <p><strong>Phone no:</strong> <%= @restaurant.phone_number %></p>
  <div>
    <p><strong>Reviews</strong></p>
    <ul class="list-group">
    <% @restaurant.reviews.each do |review| %>
      <li class="list-group-item"><%= review.content %></li>
    <% end %>
    </ul>
    <h1>New review</h1>
    <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :rating %>
    <%= f.input :content %>
    <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
  </div>
  <%= link_to "Back to homepage", restaurants_path %>
</div>
